<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-default" id="BordeDiv">
                @*<div class="box-header">
                        <h3 class="box-title">Formularios de Actividad</h3>
                    </div>*@

                <div class="box-body" id="CssDivBox">

                    @{

                        if (listaFormularios.Count != 0)
                        {

                            <div class="table-responsive">
                                <table id="tablaFormulariosActividad" class="js-dynamitable table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Acci&oacute;n</th>
                                            <th>C&oacute;digo</th>
                                            <th>Descripci&oacute;n</th>
                                            <th>Archivo</th>
                                            <th>F. Creaci&oacute;n</th>
                                            <th>Estado</th>

                                        </tr>

                                        <tr>
                                            <th></th>
                                            <th><input class="js-filter form-control" type="text" value="" placeholder="Código" ></th>
                                            <th><input class="js-filter form-control" type="text" value="" placeholder="Descripcion"></th>
                                            <th><input class="js-filter form-control" type="text" value="" placeholder="Archivo" ></th>
                                            <th><input class="js-filter form-control" type="text" value="" placeholder="F. Creación"></th>
                                            <th>
                                                <select class="js-filter  form-control">
                                                    <option value=""></option>
                                                    <option value="A">A</option>
                                                    <option value="I">I</option>
                                                </select>
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>


                                        @{int cntFila = 0; string estilo = string.Empty; }
                                        @foreach (var formulario in listaFormularios)
                                        {
                                            if ((cntFila % 2) == 0)
                                            {
                                                estilo = "background-color:#f9f9f9";
                                            }
                                            else
                                            {
                                                estilo = "";
                                            }

                                            <tr style="@estilo">
                                                <td nowrap>
                                                    <a href="@Url.Action("EliminarArchivoFormulario", "Mantenimiento", new { id = formulario.Id_Formulario })" target="_self" class="btn btnEliminarBoton" style="text-align:center">
                                                        @*<span aria-hidden="true" class="glyphicon glyphicon-remove">
                                                        </span>*@
                                                    </a>
                                                </td>
                                                <td nowrap>@Html.DisplayFor(model => formulario.Codigo)</td>
                                                <td nowrap>@Html.DisplayFor(model => formulario.Descripcion)</td>
                                                <td nowrap>
                                                    <a href="@Url.Action("DescargarArchivoFormulario", "Mantenimiento", new { nombre = formulario.NombreArchivo })">@formulario.NombreArchivo</a>
                                                </td>
                                                <td nowrap>@Html.DisplayFor(model => formulario.Fecha_Creacion)</td>
                                                <td nowrap>@Html.DisplayFor(model => formulario.Estado)</td>

                                            </tr>
                                            cntFila++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }

                    }



                </div>
            </div>
        </div>
    </div>
</section>


