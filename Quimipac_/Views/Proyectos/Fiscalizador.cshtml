                                                        </button>

                                                        <a href="@Url.Action("EliminarFiscalizadorContrato", "Contrato", new { id = fiscalizadorP.Id_Fiscalizador })" target="_self" class="btn btnEliminarBoton" style="text-align:center">
                                                            @*<span aria-hidden="true" class="glyphicon glyphicon-remove">
                                                            </span>*@
                                                        </a>

                                                    </td>


                                                    <td>@Html.DisplayFor(model => fiscalizadorP.Codigo)</td>
                                                    <td>@Html.DisplayFor(model => fiscalizadorP.Nombre)</td>
                                                    <td>@Html.DisplayFor(model => fiscalizadorP.Estado)</td>




                                                </tr>
                                            }
                                            else
                                            {
                                                <tr>

                                                    <td>

                                                        <button type="button" class="Modificar_MTPR btn btnEditarBoton class_editar_FiscalizadorProyecto" title="Editar" style="text-align:center" data-toggle="modal" data-target="#modalEditarFiscalizadorProyecto" data-id="@fiscalizadorP.Id_Fiscalizador">
                                                            @* <span aria-hidden="true" class="glyphicon glyphicon-edit"> </span>*@
